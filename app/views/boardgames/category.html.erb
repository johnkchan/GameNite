<div class="container">
    <div class="row">
        <div class="col">
            <h1><%= @category %></h1>
        </div>
    </div>

    <div class="row">
        <% @boardgames.each do |bg| %>
            <div class="col-lg">
                <img src=<%= bg["images"]["small"] %>>
                <%= link_to bg["name"], "/boardgames/#{bg["id"]}" %>
            </div>
        <% end %>
    </div>
</div>